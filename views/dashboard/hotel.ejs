<%- include('../partials/header.ejs') %> <%- include('../partials/navbar.ejs')
%>

<section class="h-lvh">
  <h2 class="text-2xl mb-4 px-12">All Hotels</h2>
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow-lg rounded-xl">
          <table class="min-w-full table-auto">
            <thead class="border-b">
              <tr>
                <th
                  scope="col"
                  class="text-sm font-medium text-gray-900 px-6 py-4 text-left"
                >
                  #
                </th>
                <th
                  scope="col"
                  class="text-sm font-medium text-gray-900 px-6 py-4 text-left"
                >
                  Hotel Name
                </th>
                <th
                  scope="col"
                  class="text-sm font-medium text-gray-900 px-6 py-4 text-left"
                >
                  Address
                </th>
                <th
                  scope="col"
                  class="text-sm font-medium text-gray-900 px-6 py-4 text-left"
                >
                  State
                </th>
                <th
                  scope="col"
                  class="text-sm font-medium text-gray-900 px-6 py-4 text-left"
                >
                  Zip Code
                </th>
                <th
                  scope="col"
                  class="text-sm font-medium text-gray-900 px-6 py-4 text-left"
                >
                  Website
                </th>
                <th
                  scope="col"
                  class="text-sm font-medium text-gray-900 px-6 py-4 text-left"
                >
                  Phone
                </th>
                <th
                  scope="col"
                  class="text-sm font-medium text-gray-900 px-6 py-4 text-left"
                >
                  Rooms
                </th>
              </tr>
            </thead>
            <tbody>
              <% if (Array.isArray(hotels) && hotels.length) { %> <%
              hotels.forEach((hotel) => { %>
              <tr class="border-b">
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                >
                  <%= hotel.HOTEL_ID ?? hotel.hotel_id %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= hotel.HOTEL_NAME ?? hotel.hotel_name %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= hotel.ADDRESS ?? hotel.HOTEL_ADDRESS ?? '-' %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= hotel.STATE ?? hotel.state %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= hotel.ZIP_CODE ?? hotel.zip_code %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= hotel.WEBSITE ?? hotel.website ?? '-' %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <%= hotel.PHONE ?? hotel.phone ?? '-' %>
                </td>
                <td
                  class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"
                >
                  <% const hid = hotel.HOTEL_ID ?? hotel.hotel_id; %> <% const
                  hasRooms = Number(hotel.HAS_ROOMS_ASSIGNED ??
                  hotel.has_rooms_assigned) === 1; %> <% if (hasRooms) { %>
                  <a
                    class="text-sm hover:bg-lime-700 hover:text-white px-2 border-2 border-lime-700 py-1 rounded-md bg-gray-100 text-lime-700 inline-block"
                    href="/view-rooms/<%= hid %>"
                    >View Rooms</a
                  >
                  <% } else { %>
                  <a
                    class="text-sm hover:bg-gray-700 hover:text-white px-2 border-2 border-gray-400 py-1 rounded-md bg-gray-100 text-gray-900 inline-block"
                    href="/add-rooms/<%= hid %>"
                    >Add Rooms</a
                  >
                  <% } %>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td
                  colspan="8"
                  class="px-6 py-8 text-center text-sm text-gray-500"
                >
                  No hotels found.
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="mx-auto">
      <button
        class="text-sm hover:bg-gray-700 mt-6 hover:text-white px-3 border-2 border-gray-400 py-2 rounded-md bg-gray-100 text-gray-900"
      >
        <a href="/add-hotel"> Add Hotel &rarr; </a>
      </button>
    </div>
  </div>
</section>

<%- include('../partials/footer.ejs') %>
