<%- include('../partials/header.ejs') %> <%- include('../partials/navbar.ejs')
%>

<section>
  <div
    class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0"
  >
    <h3 class="flex items-center mb-6 text-2xl font-semibold text-gray-900">
      <img class="w-8 h-8 mr-2" src="/hotel.png" alt="logo" />
      Update Rooms for Hotel ID <%= hotelId %>
    </h3>

    <div
      class="w-full bg-white rounded-lg shadow border md:mt-0 sm:max-w-2xl xl:p-0"
    >
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <form
          class="space-y-6"
          action="/update-rooms/<%= hotelId %>"
          method="post"
          enctype="multipart/form-data"
        >
          <% if (rooms && rooms.length) { %> <% rooms.forEach(function(room) {
          const size = (room.ROOM_SIZE || '').toLowerCase(); const label =
          size.replace(/_/g,' '); %>
          <fieldset class="border border-gray-200 rounded-md p-4">
            <legend class="px-2 text-sm font-semibold text-gray-700">
              <%= label.toUpperCase() %>
            </legend>

            <div class="grid grid-cols-1 gap-4">
              <div>
                <label
                  for="t_<%= size %>_room"
                  class="block mb-1 text-sm font-medium text-gray-900"
                >
                  Total <%= label %> rooms
                </label>
                <input
                  type="number"
                  name="t_<%= size %>_room"
                  id="t_<%= size %>_room"
                  value="<%= room.TOTAL_ROOM ?? 0 %>"
                  min="0"
                  class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg block w-full p-2.5"
                  required
                />
              </div>

              <div>
                <label
                  for="a_<%= size %>_room"
                  class="block mb-1 text-sm font-medium text-gray-900"
                >
                  Available <%= label %> rooms
                </label>
                <input
                  type="number"
                  name="a_<%= size %>_room"
                  id="a_<%= size %>_room"
                  value="<%= room.AVAILABLE_ROOM ?? 0 %>"
                  min="0"
                  class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg block w-full p-2.5"
                  required
                />
              </div>
            </div>
          </fieldset>
          <% }) %> <% } else { %>
          <p class="text-sm text-gray-600">
            No room records found for this hotel.
          </p>
          <% } %> <% if (error) { %>
          <p id="error" class="mt-2 text-xs text-red-600"><%= error %></p>
          <% } %>

          <button
            type="submit"
            name="update-rooms"
            class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
          >
            Update Rooms
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer.ejs') %>
