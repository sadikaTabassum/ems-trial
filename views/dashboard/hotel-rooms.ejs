<%- include('../partials/header.ejs') %> <%- include('../partials/navbar.ejs')
%>

<section class="h-lvh">
  <h2 class="text-2xl mb-4 px-12 font-bold text-black">
    Available Rooms for Hotel <%= hotelId %>
  </h2>
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow-lg rounded-xl">
          <table class="min-w-full table-auto border border-gray-300 bg-white">
            <thead class="border-b bg-gray-100">
              <tr>
                <th
                  class="text-sm font-semibold text-black px-6 py-4 text-left"
                >
                  #
                </th>
                <th
                  class="text-sm font-semibold text-black px-6 py-4 text-left"
                >
                  Room Size
                </th>
                <th
                  class="text-sm font-semibold text-black px-6 py-4 text-left"
                >
                  Capacity
                </th>
                <th
                  class="text-sm font-semibold text-black px-6 py-4 text-left"
                >
                  Price
                </th>
                <th
                  class="text-sm font-semibold text-black px-6 py-4 text-left"
                >
                  Total Rooms
                </th>
                <th
                  class="text-sm font-semibold text-black px-6 py-4 text-left"
                >
                  Available Rooms
                </th>
              </tr>
            </thead>
            <tbody>
              <% if (rooms && rooms.length > 0) { %> <% rooms.forEach((room,
              index) => { %>
              <tr class="border-b hover:bg-gray-50">
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-black"
                >
                  <%= index + 1 %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-black">
                  <%= room.ROOM_SIZE %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-black">
                  <%= room.ROOM_CAPACITY %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-black">
                  $<%= room.ROOM_PRICE %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-black">
                  <%= room.TOTAL_ROOM %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-black">
                  <%= room.AVAILABLE_ROOM %>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td
                  colspan="6"
                  class="px-6 py-6 text-center text-gray-600 font-medium"
                >
                  No rooms available for this hotel.
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="mx-auto">
      <button
        class="text-sm hover:bg-rose-700 mt-6 hover:text-white px-3 border-2 border-rose-400 py-2 rounded-md bg-gray-100 text-black"
      >
        <a href="/hotel">&larr; Go Back</a>
      </button>
      <button
        class="text-sm hover:bg-lime-700 mt-6 hover:text-white px-3 border-2 border-lime-700 py-2 rounded-md bg-gray-100 text-black"
      >
        <a href="/update-rooms/<%= hotelId %>">Update Rooms &rarr;</a>
      </button>
    </div>
  </div>
</section>

<%- include('../partials/footer.ejs') %>
