<%- include('../partials/header.ejs') %> <%- include('../partials/navbar.ejs')
%>

<section>
  <div
    class="flex flex-col items-center justify-start px-6 py-8 mx-auto md:h-screen lg:py-0"
  >
    <h3 class="flex items-center mb-6 text-2xl font-semibold text-gray-900">
      <img class="w-8 h-8 mr-2" src="/hotel.png" alt="logo" />
      Add Rooms for Reservation <%= reservationId %>
    </h3>

    <% if (typeof reservationSummary !== 'undefined' && reservationSummary) { %>
    <div class="mb-4 text-sm text-gray-700">
      <span class="font-medium"><%= reservationSummary.HOTEL_NAME %></span> ·
      <span><%= reservationSummary.ROOM_SIZE.replace('_',' ') %></span> ·
      Status: <% if (Number(reservationSummary.STATUS) === 1) { %>
      <span class="text-green-600 font-medium">Reserved</span>
      <% } else if (Number(reservationSummary.STATUS) === 2) { %>
      <span class="text-yellow-600 font-medium">Cancelled</span>
      <% } else { %>
      <span class="text-gray-600 font-medium">Finished</span>
      <% } %>
    </div>
    <% } %>

    <div
      class="w-full bg-white rounded-lg shadow border md:mt-0 sm:max-w-2xl xl:p-0"
    >
      <div class="p-6 md:space-y-6 sm:p-8">
        <form
          class="space-y-4 md:space-y-6"
          action="/add-room/<%= reservationId %>"
          method="post"
        >
          <div>
            <label
              for="extra_room"
              class="block mb-2 text-sm font-medium text-gray-900"
              >Add Rooms</label
            >
            <input
              type="number"
              name="extra_room"
              id="extra_room"
              min="1"
              placeholder="Rooms to add"
              class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
              required
            />
          </div>

          <% if (error) { %>
          <p id="error" class="mt-2 text-xs text-red-600"><%= error %></p>
          <% } %>

          <button
            type="submit"
            class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
          >
            Add Rooms
          </button>
        </form>

        <a
          href="/event-rooms/<%= reservationId %>"
          class="inline-block mt-4 text-sm text-slate-700 hover:underline"
          >← Back</a
        >
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer.ejs') %>
